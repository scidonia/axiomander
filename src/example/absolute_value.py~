"""Component: absolute_value
Calculate the absolute value of a number
Original UID: example-abs-001
"""

# Import Axiomander contract decorators
from axiomander import precondition, postcondition, invariant

# Import implementation placeholder functions
from axiomander.exceptions import (
    ImplementThisError,
    DontImplementThisError,
    UnimplementedError,
    implement_this,
    dont_implement_this,
    unimplemented
)

from absolute_value_logical import *

"""Implementation for absolute_value function."""

from typing import Union
from .logical import is_real_number, is_absolute_value, Number


@precondition("Input must be a real number", is_real_number)
@postcondition("Result is non-negative and has same magnitude as input", is_absolute_value)
def absolute_value(x: Number) -> Number:
    """
    Calculate the absolute value of a number.

    The absolute value of a number is its distance from zero on the number line.
    For any real number x, |x| = x if x >= 0, and |x| = -x if x < 0.

    Args:
        x: A real number (int or float)

    Returns:
        The absolute value of x (always non-negative)

    Raises:
        TypeError: If x is not a real number

    Examples:
        >>> absolute_value(5)
        5
        >>> absolute_value(-3)
        3
        >>> absolute_value(0)
        0
        >>> absolute_value(-2.5)
        2.5
    """

    # Core logic: return x if non-negative, otherwise return -x
    if x >= 0:
        result = x
    else:
        result = -x

    return result
